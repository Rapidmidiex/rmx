    "version": "0.2.0",
    "configurations": [
        {
            "name": "Start Server",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/cmd/.env"
        },
        {
            "name": "TUI Client",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/ui/terminal",
            "cwd": "${workspaceFolder}",
            "args": ["--server", "http://localhost:9003"],
            "console": "integratedTerminal"
        }
    ]
}
